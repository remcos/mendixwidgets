<?xml version="1.0" encoding="utf-8" ?>
<widget id="ShowByCondition.widget.ShowByCondition" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
	<name>ShowByCondition</name>
	<description>This widget will hide or show its parent, based on the result of a Microflow.</description>
	<icon>
		
	</icon>

	<properties>
		<property key="checktype" type="enumeration" defaultValue="microflow">
            <caption>Evaluation Type</caption>
            <category>Data source</category>
            <description>Defines whether conditional visibility is controlled by existance of a reference or by a boolean microflow.
            </description>
            <enumerationValues>
                <enumerationValue key="microflow">Microflow</enumerationValue>
                <enumerationValue key="reference">Reference</enumerationValue>
            </enumerationValues>
        </property>
		<property key="microflowName" type="microflow" required="false">
			<caption>Boolean Microflow</caption>
			<category>Data source</category>
			<description>Select the Microflow that determines whether the element should be shown.</description>
			<returnType type="Boolean"/>
		</property>
		<property key="referenceEntity" type="entity" required="false" isPath="yes" pathType="reference">
			<caption>Reference To Check</caption>
			<category>Data source</category>
			<description>Select a referenced entity to check for its presence instead of using a microflow.</description>
		</property>
		<property key="returnValue" type="boolean" defaultValue="true">
			<caption>Show on true?</caption>
			<category>Data source</category>
			<description>'Yes' shows the parent element on a true outcome, 'No' on a false outcome.</description>
		</property>
	</properties>
</widget>
